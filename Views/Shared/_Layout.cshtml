@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Central Maryland Martial Arts</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-md navbar-dark bg-dark"> <!-- the fixed-top class causes "header" to overlap with "main".-->
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Curriculum</a> *@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Central Maryland Martial Arts</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Syllabi" asp-action="Index">Curriculum</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </header>
        <main role="main" class="pb-3">
            <div class="container">
                <img class="w-25 p-2" src="~/images/logo.png" />
                <h1 class="float-right p-2 display-3">@ViewData["Title"]</h1>
                <p>@ViewData["Description"]</p>
            </div>
            <div class="container">
                @RenderBody()
            </div>
        </main>
        <footer class="border-top footer text-muted">
            <div class="container">
                Website by <a href="https://www.github.com/juan-abr">Juan Rodriguez</a>
                &copy; 2022 - Curriculum - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                @if (!SignInManager.IsSignedIn(User))
                {
                    <a>- </a><a asp-area="Identity" asp-page="/Account/Login">Login</a>
                }
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>